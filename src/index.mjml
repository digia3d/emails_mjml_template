      <mj-class name="benefit" padding="20px 5px 0 5px" />
      <mj-class name="benefit-img" align="center" with="50px" height="150px" padding="0 10px 0 10px" />
      <mj-class name="benefit-title" align="center" padding-top="15px" font-size="14px" font-weight="700" line-height="18px" />
      <mj-class name="benefit-content" align="center" padding-top="10px" font-size="12px" line-height="18px" />

    </mj-attributes>

    <mj-style inline="inline">
      .body-anchor-text {
        display: inline;
        color: #3f1400;
        font-size: 14px;
        line-height: 22px;
        text-decoration: none;
        cursor: pointer;
      }

      .text-gray {
        color: #3d0383;
      }

      .footer-anchor-text {
        display: inline;
        color: #3f3e3e;
        font-size: 12px;
        line-height: 18px;
        text-decoration: none;
        cursor: pointer;
      }
    </mj-style>
    <mj-style>
      .body-anchor-text:hover,
      .footer-anchor-text:hover {
        text-decoration: underline !important;
      }

      .btn-dark-outline a:hover,
      .btn-dark a:hover {
        color: #ffffff !important;
        background-color: #212529 !important;
        border-color: #ffffff !important;
      }

      .btn-dark-outline td:hover,
      .btn-dark td:hover {
        background-color: #212529 !important;
      }

      @media only screen and (max-width: 599px) {
        .email-footer-img {
          text-align: left !important;
          padding-top: 20px !important;
        }

        .footer {
          padding-left: 15px !important;
          padding-right: 15px !important;
        }
      }
    </mj-style>
  </mj-head>
