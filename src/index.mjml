<mjml>
  <mj-head>
    <mj-breakpoint width="600px" />
    <mj-attributes>
      <mj-all color="#2c2c2c" font-family="Arial" padding="0" />
      <mj-class name="body-text" font-size="14px" line-height="22px" />
      <mj-class name="list-text" padding-top="10px" font-size="14px" line-height="28px" />
      <mj-class name="btn" background-color="#3d0383" color="#ffffff" font-size="14px" font-weight="500" line-height="22px" fluid-on-mobile="true" align="center" inner-padding="7px 103px" border-radius="8px" />
